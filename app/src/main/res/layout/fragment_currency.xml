<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currCard1"
        android:padding="10dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:id="@+id/currOutput"/>

        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/currOutputUnit"
            android:hint="Unit"
            android:layout_gravity="end"/>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currCard2"
        android:layout_below="@id/currCard1"
        android:layout_margin="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/currInput"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="0" />

        <EditText
            android:id="@+id/currInputUnit"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:hint="Unit" />

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currCard2"
        android:id="@+id/convertCurr"
        android:text="Convert"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>